#--------------------------------
# jhead makefile for Win32
#--------------------------------

CC=cl /nologo /wd4267
CFLAGS=-c -Ox -Os -W3 -Zp -D _CRT_SECURE_NO_WARNINGS


LINKER=link
LINKCON = /nologo
OBJ = obj

all:jhead.exe obj

obj: 
	mkdir obj

OBJECTS_JHEAD = $(OBJ)\jhead.obj \
                $(OBJ)\jpgfile.obj \
                $(OBJ)\jpgqguess.obj \
                $(OBJ)\myglob.obj \
                $(OBJ)\paths.obj \
                $(OBJ)\exif.obj \
                $(OBJ)\iptc.obj \
                $(OBJ)\gpsinfo.obj \
                $(OBJ)\makernote.obj

$(OBJECTS_JHEAD): $(@B).c jhead.h obj
    $(CC) /Fo$(OBJ)\ $(CFLAGS) $(@B).c

jhead.exe: $(OBJECTS_JHEAD)
    $(LINKER) $(LINKCON) -OUT:jhead.exe $(OBJECTS_JHEAD)
